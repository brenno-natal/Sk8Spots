    <!--Script New Spot-->
    <script type="text/javascript">
        function abrirNovoSpot() {
            // fecharContato();
            ocultarMenuLateral();
            //document.getElementById("newSpot").style.top = "13%";
            $("#newSpot").modal({
                backdrop: "static",
                keyboard: true
            });
        }

        function fecharNovospot() {
            //document.getElementById("newSpot").style.top = "";
            $("#newSpot").modal("hide");
        }

        $("#formAdd").validate({
            rules: {
                nome: {
                    required: true,
                    minlength: 3,
                    maxlength: 100
                },
                idtipo: {
                    required: true
                },
                endereco: {
                    required: true,
                    minlength: 5,
                    maxlength: 100
                },
                bairro: {
                    required: true,
                    minlength: 3,
                    maxlength: 50
                },
                image: {
                    required: true
                }
            },
            submitHandler: function (form) {
                
                var formData = new FormData(form);

                $.ajax({
                    url: "api/local/criar",
                    method: "post",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function () {
                        fecharNovospot();
                        form.reset();
                        alert("Criado com sucesso!");
                        location.reload();
                    },
                    error: function () {
                        alert("Erro!");
                    }
                });

            }
        });
    </script>

